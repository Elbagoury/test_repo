<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_wiz_reject_reason_form" model="ir.ui.view">
            <field name="name">wiz.reject.reason.form</field>
            <field name="model">wiz.reject.reason</field>
            <field name="arch" type="xml">
                <form string="Reject Reason">
                    <separator string="Reason"/>
                    <field name="name" placeholder="Write reason here..."/>
                    <footer>
                        <button name="action_reject" string="Reject" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>