<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_wiz_calc_age_form" model="ir.ui.view">
            <field name="name">wiz.calc.age.form</field>
            <field name="model">wiz.calc.age</field>
            <field name="arch" type="xml">
                <form string="Calculate Students Age">
                    <separator string="Click Calculate Age button  (form 1)"/>
                    <group col="4">
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <footer>
                        <button name="calc_age" string="Calculate Age" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_wiz_calc_age_form2" model="ir.ui.view">
            <field name="name">wiz.calc.age.form</field>
            <field name="model">wiz.calc.age</field>
            <field name="arch" type="xml">
                <form string="Calculate Students Age">
                    <separator string="Click Calculate Age button (form 2)"/>
                    <group col="4">
                        <field name="from_date"/>
                        <field name="to_date"/>
                    </group>
                    <footer>
                        <button name="calc_age" string="Calculate Age" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wiz_calc_age" model="ir.actions.act_window">
            <field name="name">Calculate Age</field>
            <field name="res_model">wiz.calc.age</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_wiz_calc_age" parent="menu_student_main" action="action_wiz_calc_age"/>

    </data>
</openerp>